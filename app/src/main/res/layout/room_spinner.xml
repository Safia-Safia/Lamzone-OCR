<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/bcgspinner"
    android:padding="5dp">

    <ImageView
        android:id="@+id/image_room_color"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#1B019B"
        android:src="@drawable/circle" />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_room_color"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/image_room_color"
        android:text="@string/salle_choisie"
        android:textColor="@android:color/black"
        android:textSize="25sp" />
</RelativeLayout>