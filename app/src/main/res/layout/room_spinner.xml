<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:padding="5dp"
    android:background="@drawable/bcgspinner"
    >

    <ImageView
        android:id="@+id/image_room_color"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/circle"
        android:background="#1B019B"
        />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_room_color"
        android:layout_toEndOf="@+id/image_room_color"
        android:text="SALLE CHOISIE"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        />
</RelativeLayout>