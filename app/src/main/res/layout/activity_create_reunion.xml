<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="45dp"
    android:paddingEnd="45dp"
   >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter une rÃ©union"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

   <TextView
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <EditText
        android:id="@+id/edit_meeting_name"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Enter Name"
        android:inputType="textEmailAddress"
        android:textColorHint="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_mail"
        app:layout_constraintTop_toBottomOf="@id/subTitle" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Member's name"
        android:textColorHint="#000"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_mail"
        app:layout_constraintTop_toBottomOf="@id/edit_meeting_name" />

    <ImageView
        android:id="@+id/image_mail"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:padding="5dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintTop_toBottomOf="@id/subTitle"
        app:layout_constraintEnd_toStartOf="@+id/edit_meeting_name"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/image_password"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintTop_toBottomOf="@id/image_mail"
        app:layout_constraintEnd_toStartOf="@+id/edit_email"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:text="enregistrer"
        android:textColor="#FEFEFE"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_email"
        />


</androidx.constraintlayout.widget.ConstraintLayout>