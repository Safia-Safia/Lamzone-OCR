<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:paddingHorizontal="45dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créer une réunion"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <EditText
        android:id="@+id/edit_meeting_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter Name"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textColorHint="#000"
        app:layout_constraintTop_toBottomOf="@id/subTitle" />


    <LinearLayout
        android:id="@+id/layout_pickers"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <ImageButton
        android:id="@+id/btn_datePicker"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_meeting_name" />

    <ImageButton
        android:id="@+id/btn_timePicker"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:src="@drawable/time"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_datePicker" />

    <TextView
        android:id="@+id/txt_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_timePicker"
        app:layout_constraintStart_toEndOf="@+id/btn_datePicker" />

    <TextView
        android:id="@+id/txt_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_timePicker"
        app:layout_constraintStart_toEndOf="@+id/btn_datePicker" />

    <TextView
        android:id="@+id/text_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_datePicker"
        app:layout_constraintStart_toEndOf="@+id/btn_datePicker" />

    <ImageView
        android:id="@+id/image_contact"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:padding="10dp"
        android:src="@drawable/people"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_timePicker" />

    <Button
        android:id="@+id/btn_add_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_shape"
        android:gravity="center"
        android:text="Ajouter des participants"
        app:layout_constraintBottom_toTopOf="@id/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_timePicker" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_email" />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="15dp"
        android:background="#1E7FCB"
        android:text="enregistrer"
        android:textColor="#FEFEFE"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spinner" />


</androidx.constraintlayout.widget.ConstraintLayout>